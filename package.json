{
  "name": "solana-kite",
  "version": "1.7.0",
  "description": "The modern Solana framework for TypeScript.",
  "type": "module",
  "main": "./dist/index.node.js",
  "module": "./dist/index.node.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.node.js"
      },
      "browser": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.browser.js"
      }
    }
  },
  "private": false,
  "sideEffects": false,
  "browser": {
    "fs/promises": false,
    "path": false,
    "./dist/index.node.js": "./dist/index.browser.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build",
    "build": "npm run clean && npx tsup",
    "clean": "rm -rf dist",
    "test": "npx tsx --test --test-concurrency=true src/tests/**/*.test.ts",
    "test:webpack": "npx tsx --test --test-concurrency=true src/tests/webpack.smoke.test.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "solana",
    "Solana Kit",
    "blockchain",
    "secret key",
    "private key",
    "keyPair",
    "devnet SOL",
    "faucet",
    "web3.js",
    "kit",
    "@solana/helpers"
  ],
  "author": "Mike MacCana <mike.maccana@gmail.com>",
  "contributors": [
    "Mike MacCana",
    "Aaron Milano",
    "Nick Frostbutter",
    "John Liu",
    "Steven Luscher",
    "Christian Krueger",
    "Ayush Chauhan"
  ],
  "license": "MIT",
  "dependencies": {
    "@solana-program/compute-budget": "^0.9.0",
    "@solana-program/memo": "^0.8.0",
    "@solana-program/system": "^0.8.0",
    "@solana-program/token": "^0.6.0",
    "@solana-program/token-2022": "^0.5.0",
    "@solana/assertions": "^3.0.3",
    "@solana/errors": "^3.0.3",
    "@solana/kit": "^3.0.3",
    "@solana/promises": "^3.0.3",
    "@solana/transaction-confirmation": "^3.0.3",
    "dotenv": "^16.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.17.52",
    "prettier": "^3.0.3",
    "ts-loader": "^9.5.4",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4",
    "webpack": "^5.102.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
